{
    "include": ["src"],
    "compilerOptions": {
        "strict": false,
        /* features */
        "experimentalDecorators": true,
        "useDefineForClassFields": true,
        
        /* syntax */
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020"],
        "types": ["./src/index.d.ts"],
        "skipLibCheck": true,

        /* bundler mode */
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "allowJs": true,

        /* import path aliases */
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    }
}